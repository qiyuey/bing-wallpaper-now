{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:image:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$PICTURE/**"
        },
        {
          "path": "$HOME/Pictures/**"
        }
      ]
    },
    "dialog:default",
    "dialog:allow-message",
    "dialog:allow-open",
    "dialog:allow-save",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "autostart:default",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:allow-is-enabled",
    "notification:default"
  ]
}
