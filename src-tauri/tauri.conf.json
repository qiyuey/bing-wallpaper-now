{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bing Wallpaper Now",
  "version": "0.1.0",
  "identifier": "top.qiyuey.wallpaper",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bing Wallpaper Now",
        "width": 980,
        "height": 720,
        "minWidth": 700,
        "minHeight": 500,
        "hiddenTitle": true,
        "center": true,
        "visible": true,
        "focus": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$PICTURE/**", "$HOME/Pictures/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
