{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bing Wallpaper Now",
  "version": "0.3.6-0",
  "identifier": "top.qiyuey.wallpaper",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bing Wallpaper Now",
        "width": 980,
        "height": 720,
        "minWidth": 380,
        "minHeight": 580,
        "hiddenTitle": true,
        "center": true,
        "visible": false,
        "focus": false,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$PICTURE/**",
          "$HOME/Pictures/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null,
      "hardenedRuntime": true
    }
  }
}
