{
  "name": "bing-wallpaper-now",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "typecheck": "tsc --noEmit",
    "test:rust": "cargo test --manifest-path src-tauri/Cargo.toml",
    "test:frontend": "vitest run",
    "fmt:check": "cargo fmt --manifest-path src-tauri/Cargo.toml -- --check",
    "fmt:fix": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:rust": "cargo clippy --manifest-path src-tauri/Cargo.toml -- -D warnings",
    "lint:frontend": "eslint -c .config/eslint/.eslintrc.cjs \"src/**/*.{ts,tsx}\"",
    "lint:frontend:fix": "eslint -c .config/eslint/.eslintrc.cjs --fix \"src/**/*.{ts,tsx}\"",
    "lint": "npm run lint:rust && npm run lint:frontend",
    "check:rust": "npm run fmt:check && npm run lint:rust && npm run test:rust",
    "check:frontend": "npm run format:check && npm run typecheck && npm run lint:frontend && npm run test:frontend",
    "check": "npm run check:rust && npm run check:frontend",
    "coverage:rust": "bash .config/scripts/coverage-rust.sh",
    "coverage:frontend": "vitest run --coverage",
    "coverage": "npm run coverage:rust && npm run coverage:frontend",
    "ci": "npm run typecheck && npm run build && npm run test:rust && npm run test:frontend"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-notification": "^2",
    "@tauri-apps/plugin-store": "^2",
    "@tauri-apps/plugin-autostart": "^2"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/node": "^20.11.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@tauri-apps/cli": "^2",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "vitest": "^1.5.0",
    "jsdom": "^24.0.0",
    "c8": "^9.1.0",
    "cross-env": "^7.0.3",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
